@{
    Layout = "_Layout";

}


    @model List<Pizza>


<h1 style="text-align:center">le mie pizze</h1>

<div class="container-fluid row p-2 border-2 " style="margin-top:20px; background-color:antiquewhite">

    @if (Model.Count > 0)
    {
        @foreach (var item in Model)
        {


            <div class="card m-2" style="width: 18rem; background-color:bisque" >
                <img src="@item.ImageAddress" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title"> @item.Name </h5>
                    <p class="card-text">@item.Description</p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">prezzo @item.Price € </li>

                                <li class="list-group-item"> <a class=" text-dark" href="@Url.Action("Show",new {id = item.Id})" >dettagli pizza</a> </li>


                            @*<li class="list-group-item">A third item</li>*@
                </ul>
                @*  <div class="card-body">
                    <a href="#" class="card-link">Card link</a>
                    <a href="#" class="card-link">Another link</a>
                    </div>*@
            </div>
        }
    }else{
        <p> spiacenti ma al momento non ci sono pizze in vendita. </p>
    }

</div>
